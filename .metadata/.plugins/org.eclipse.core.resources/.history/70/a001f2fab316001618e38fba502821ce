$.true1.addEventListener('click', function() { 

	$.true1.color = "#4CBB17";
	$.false1.color = "#d4d4d4";
	vraag1Antwoord = "Ja1"; 
});
$.false1.addEventListener('click', function() {	
	$.true1.color = "#d4d4d4";
	$.false1.color = "red";
	vraag1Antwoord = 'Nee1'; 
});
