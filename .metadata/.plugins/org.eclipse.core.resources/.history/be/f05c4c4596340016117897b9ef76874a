		mapview.addCircle(circle);

		containerView.add(mapview);

	}




	if (OS_IOS) {
		var km1 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+1km',
			width : '25%',
			borderRadius : 4,
			bottom : 10,
			color : '#000',
			left : 10,
			backgroundColor : 'none'
		});
	}
	if (OS_ANDROID) {
		var km1 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+1km',
			width : '25%',
			borderRadius : 4,
			bottom : 0,
			color : '#000',
			left : 10,
			backgroundColor : 'none'
		});
	}

	km1.addEventListener('click', function() {

		kilometer = 1000;
		latDelta = 0.025;
		longDelta = 0.025;
		getMap();
		km1.backgroundColor = '#72D5FF';
		km5.backgroundColor = 'none';
		km15.backgroundColor = 'none';
		km25.backgroundColor = 'none';
		Ti.App.Properties.setInt('kilometer', 1000);

	});

	if (OS_IOS) {
		var km5 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+5km',
			left : '25%',
			width : '25%',
			borderRadius : 4,
			bottom : 10,
			color : '#000',
			backgroundColor : 'none'

		});
	}
	if (OS_ANDROID) {
		var km5 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+5km',
			left : '25%',
			width : '25%',
			borderRadius : 4,
			bottom : 0,
			color : '#000',
			backgroundColor : 'none'

		});
	}

	km5.addEventListener('click', function() {
		kilometer = 5000;
		latDelta = 0.12;
		longDelta = 0.12;
		getMap();
		km1.backgroundColor = 'none';
		km5.backgroundColor = '#72D5FF';
		km15.backgroundColor = 'none';
		km25.backgroundColor = 'none';
		Ti.App.Properties.setInt('kilometer', 5000);

	});
	if (OS_IOS) {
		var km15 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+15km',
			width : '25%',
			borderRadius : 4,
			bottom : 10,
			right : '25%',
			color : '#000',
			backgroundColor : 'none'
		});
	}
	if (OS_ANDROID) {
		var km15 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+15km',
			width : '25%',
			borderRadius : 4,
			bottom : 0,
			right : '25%',
			color : '#000',
			backgroundColor : 'none'
		});
	}
	km15.addEventListener('click', function() {
		kilometer = 15000;
		latDelta = 0.4;
		longDelta = 0.4;
		getMap();
		km1.backgroundColor = 'none';
		km5.backgroundColor = 'none';
		km15.backgroundColor = '#72D5FF';
		km25.backgroundColor = 'none';
		Ti.App.Properties.setInt('kilometer', 15000);
	});

	if (OS_IOS) {
		var km25 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+25km',
			width : '25%',
			borderRadius : 4,
			bottom : 10,
			right : 10,
			color : '#000',
			backgroundColor : 'none'
		});
	}
	if (OS_ANDROID) {
		var km25 = Ti.UI.createButton({
			font : {
				fontSize : 16,
			},
			title : '+25km',
			width : '25%',
			borderRadius : 4,
			bottom : 0,
			right : 10,
			color : '#000',
			backgroundColor : 'none'
		});
