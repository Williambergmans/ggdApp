$.straal.addEventListener('click', function(e) { userLong;userLat;kilometer;
	


	if (kilometer == 1000) {
		latDelta = 0.025;
		longDelta = 0.025;
	}
	if (kilometer == 5000) {
		latDelta = 0.12;
		longDelta = 0.12;
	}
	if (kilometer == 15000) {
		latDelta = 0.4;
		longDelta = 0.4;
	}
	if (kilometer == 25000) {
		latDelta = 0.6;
		longDelta = 0.6;
	}
