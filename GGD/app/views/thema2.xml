<?xml version="1.0"?>
<Alloy>
	<!-- Main Container of the View, title of the Window is pulled from the title property on the main view-->
	<Window class="container vgroup" title="Informatie" tabBarHidden="true">
		<ActionBar platfor="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow"/>
		<ScrollView id="contactInfo" class="vgroup top">
			<View class="left-buffer top size themaTemplate">
				<ImageView id="photo" class="themaAvatar"/>
				<View platform="android" class="themaSmoothAvatarBorderRadius"/>
				<View class="vgroup left size">
					<Label id="titel" text="" class="themaTitle"/>
				</View>
				<View class=" gray-line bottom"/>
			</View>
			<View class="buffer vgroup size">
				<View class="hgroup size left-buffer right-buffer">
					<Label id="info" text="Info" class="h5 gray"/>
				</View>
			</View>
				<Label id="callBtn" class="icon icon-long-btn icon-phone" onClick="callContact">Bel</Label><!--onClick="callContact" -->
				<Label  class="lblMiddle gray">Of</Label>
			    <Label id="emailBtn" class="icon icon-long-btn icon-email" onClick="emailContact">Mail</Label> <!-- onClick="emailContact" -->	  
				<View class="top-buffer gray-line bottom"/>
				
		</ScrollView>
	</Window>
</Alloy> 
